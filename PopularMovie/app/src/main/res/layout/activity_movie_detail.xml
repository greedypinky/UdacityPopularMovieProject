<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/text_movie_title"
        android:background="@color/movieTitleBg"
        android:textSize="22dp"
        android:textColor="@color/movieTitleText"
        android:layout_gravity="left"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >


        <ImageView
            android:id="@+id/image_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/image_movie_poster"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/text_movie_release_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"

                />
            <TextView
                android:id="@+id/text_movie_playtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"

                />
            <TextView
                android:id="@+id/text_movie_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"

                />

            <!--
            <Button
                android:id="@+id/movie_favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"/>
                -->


        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/text_movie_plot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:textSize="22dp"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="right"
        />



</LinearLayout>